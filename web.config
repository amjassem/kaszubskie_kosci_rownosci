<?xml version="1.0" encoding="utf-8"?>
<configuration>
    <system.webServer>
        <handlers>
            <add name="httpPlatformHandler" path="*" verb="*" modules="httpPlatformHandler" resourceType="Unspecified"/>
        </handlers>
        <httpPlatform processPath="%AZURE_RUNTIME_DIRECTORY%\gunicorn\gunicorn.exe"
                       arguments="--workers=4 -b 0.0.0.0:8000 -c gunicorn_config.py app:app"/>
    </system.webServer>
</configuration>
